create database castles;

use castles;

create table account_state(id VARBINARY(128) NOT NULL, state VARBINARY(256) NOT NULL, PRIMARY KEY (id)) engine=InnoDb;

create table ratings(id VARBINARY(128) NOT NULL, weekNumber INT, rating DOUBLE, PRIMARY KEY (id)) engine=InnoDb;

CREATE INDEX rating ON ratings(rating);

create table user_info(id VARBINARY(128) NOT NULL, userInfo VARBINARY(1024) NOT NULL, PRIMARY KEY (id)) engine=InnoDb;

create table tutor_state(id VARBINARY(128) NOT NULL, state VARBINARY(32) NOT NULL, PRIMARY KEY (id)) engine=InnoDb;