<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>ru.rknrl.castles.rmi</groupId>
    <artifactId>rmi-server</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>rmi-server</name>

    <parent>
        <groupId>ru.rknrl.castles</groupId>
        <artifactId>rmi</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>ru.rknrl.castles.rmi</groupId>
            <artifactId>rmi-interfaces</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>ru.rknrl.castles.dto</groupId>
            <artifactId>dto-server</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>ru.rknrl.core.rmi</groupId>
            <artifactId>rmi-server</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
        </dependency>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-actor_2.11</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!--Client -->

            <plugin>
                <groupId>ru.rknrl.core.rmi</groupId>
                <artifactId>rmi-maven-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <configuration>
                    <lang>as</lang>
                    <out>${project.basedir}/../rmi-client/src/main/flex</out>
                    <jars>
                        <param>
                            <jar>
                                ${project.basedir}/../rmi-interfaces/target/rmi-interfaces-1.0-SNAPSHOT-jar-with-dependencies.jar
                            </jar>
                            <rmi>
                                <param>
                                    <name>AuthRMI</name>
                                    <c2b>ru.rknrl.castles.rmi.c2b.AuthFacade</c2b>
                                    <b2c>ru.rknrl.castles.rmi.b2c.AuthFacade</b2c>
                                </param>
                                <param>
                                    <name>AccountRMI</name>
                                    <c2b>ru.rknrl.castles.rmi.c2b.AccountFacade</c2b>
                                    <b2c>ru.rknrl.castles.rmi.b2c.AccountFacade</b2c>
                                </param>
                                <param>
                                    <name>EnterGameRMI</name>
                                    <c2b>ru.rknrl.castles.rmi.c2b.EnterGameFacade</c2b>
                                    <b2c>ru.rknrl.castles.rmi.b2c.EnterGameFacade</b2c>
                                </param>
                                <param>
                                    <name>GameRMI</name>
                                    <c2b>ru.rknrl.castles.rmi.c2b.GameFacade</c2b>
                                    <b2c>ru.rknrl.castles.rmi.b2c.GameFacade</b2c>
                                </param>
                            </rmi>
                        </param>
                    </jars>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!--Server -->

            <plugin>
                <groupId>ru.rknrl.core.rmi</groupId>
                <artifactId>rmi-maven-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <configuration>
                    <lang>scala</lang>
                    <out>${project.basedir}/src/main/scala</out>
                    <jars>
                        <param>
                            <jar>
                                ${project.basedir}/../rmi-interfaces/target/rmi-interfaces-1.0-SNAPSHOT-jar-with-dependencies.jar
                            </jar>
                            <rmi>
                                <param>
                                    <name>AuthRMI</name>
                                    <c2b>ru.rknrl.castles.rmi.c2b.AuthFacade</c2b>
                                    <b2c>ru.rknrl.castles.rmi.b2c.AuthFacade</b2c>
                                </param>
                                <param>
                                    <name>AccountRMI</name>
                                    <c2b>ru.rknrl.castles.rmi.c2b.AccountFacade</c2b>
                                    <b2c>ru.rknrl.castles.rmi.b2c.AccountFacade</b2c>
                                </param>
                                <param>
                                    <name>EnterGameRMI</name>
                                    <c2b>ru.rknrl.castles.rmi.c2b.EnterGameFacade</c2b>
                                    <b2c>ru.rknrl.castles.rmi.b2c.EnterGameFacade</b2c>
                                </param>
                                <param>
                                    <name>GameRMI</name>
                                    <c2b>ru.rknrl.castles.rmi.c2b.GameFacade</c2b>
                                    <b2c>ru.rknrl.castles.rmi.b2c.GameFacade</b2c>
                                </param>
                            </rmi>
                        </param>
                    </jars>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
